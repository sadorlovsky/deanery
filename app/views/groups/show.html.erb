<% if notice %>
<div class="uk-alert uk-alert-success">
  <%= notice %>
</div>
<% end %>

<div class="uk-grid">
  <div class="uk-width-1-1">
    <div class="uk-panel uk-panel-box">
      <h1><%= @group.name %></h1>
      <p>Курс: <%= @group.course %></p>
      <p>Направление: <%= "##{@group.code} '#{@group.branch}'" %></p>
      <p>Квалификация: <%= @group.get_qualification %></p>

      <%= link_to edit_group_path(@group) do %>
        <i class="uk-icon-edit"></i> Редактировать
      <% end %> |
      <%= link_to @group, method: :delete, data: { confirm: 'Вы уверены?' } do %>
        <i class="uk-icon-trash-o"></i> Удалить
      <% end %>
    </div>
  </div>
</div>

<% if @group.students.count > 0 %>
<h2>Студенты группы</h2>
<table class="uk-table uk-table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>ФИО</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @group.students.each_with_index do |student, index| %>
    <tr>
      <td class="uk-width-1-5"><%= index + 1 %></td>
      <td class="uk-width-3-5"><%= link_to student.full_name, student %></td>
      <td><% if student.class_monitor? %><i class="uk-icon-star uk-icon-hover" data-uk-tooltip title="Староста группы"></i><% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h2>Студентов нет</h2>
<% end %>

<%= link_to "Новый студент", new_group_student_path(@group), class: "uk-button uk-button-large" %>

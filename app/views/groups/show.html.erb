<% if notice %>
  <%= render "layouts/notice" %>
<% end %>

<div class="panel panel-default">
  <div class="panel-body">

    <h1><%= @group.name %></h1>
    <p class="lead">
      <%= @group.course %> курс
    </p>
    <p class="lead">
      Направление подготовки: #<%= @group.code %>
      <strong><%= @group.branch %></strong>
      <span class="label label-default"><%= @group.get_qualification %></span>
    </p>

    <div class="btn-group" role="group" aria-label="...">
      <%= link_to edit_group_path(@group), class: "btn btn-primary" do %>
        <%= icon "edit" %> Редактировать
      <% end %>
      <%= link_to @group, class: "btn btn-danger", method: :delete, data: { confirm: "Вы уверены что хотите удалить #{@group.name} ?" } do %>
        <%= icon "trash" %> Удалить
      <% end %>
    </div>

  </div>
</div>

<% if @group.students.count > 0 %>
<h2>В группе <%= @group.students.count %> студентов</h2>
<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>ФИО</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @group.students.each_with_index do |student, index| %>
    <tr>
      <td class="uk-width-1-5"><%= index + 1 %></td>
      <td class="uk-width-3-5"><%= link_to student.full_name, student %></td>
      <td><% if student.class_monitor? %><i class="uk-icon-star uk-icon-hover" data-uk-tooltip title="Староста группы"></i><% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
<% else %>
<h2>Студентов в группе нет</h2>
<% end %>

<%= link_to new_group_student_path(@group), class: "btn btn-primary" do %>
  <%= icon "plus" %> Новый студент
<% end %>

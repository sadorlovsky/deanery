<% if notice %>
  <%= render "layouts/notice" %>
<% end %>

<h1>Группы</h1>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Наименование</th>
      <th>Код</th>
      <th>Направление</th>
      <th>Курс</th>
      <th>Квалификация</th>
      <th>Студентов</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
    <tr>
      <td><%= link_to group.name, group %></td>
      <td><%= group.code %></td>
      <td><%= group.branch %></td>
      <td><%= group.course %></td>
      <td><%= group.qualification_text %></td>
      <td><%= group.students.count %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to new_group_path, class: "btn btn-primary" do %>
  <%= icon "plus" %> Новая группа
<% end %>

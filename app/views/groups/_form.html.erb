<%= simple_form_for(@group, html: {class: "form-horizontal"}, defaults: {input_html: {class: "form-control"}}) do |f| %>

  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :code, "Код", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.input_field :code, placeholder: "Код", type: "number", required: true %>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <span class="help-block with-errors">Числовой код направления подготовки. Обязательное поле.</span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :branch, "Направление", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.input_field :branch, placeholder: "Направление", required: true %>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <span class="help-block with-errors">Направление подготовки. Обязательное поле.</span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :course, "Курс", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8"> 
          <%= f.input_field :course, placeholder: "Курс", min: 1, max: 6, required: true %>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <span class="help-block with-errors">Курс 1 - 6. Обязательное поле.</span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :qualification, "Квалификация", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.input_field :qualification, collection: qualifications, prompt: "Квалификация", required: true %>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <span class="help-block with-errors">Бакалавриат или Магистратура. Обязательное поле.</span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-5">
      <div class="form-group">
        <%= f.label :name, "Наименование", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.input_field :name, placeholder: "Наименование", required: true %>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <span class="help-block with-errors">Наименование группы. Обязательное поле.</span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5">
      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
          <%= link_to :back, class: "btn btn-default" do %>
            <%= icon "chevron-left" %></i> Назад
          <% end %>
        </div>
        <div class="btn-group" role="group">
          <%= button_tag type: "submit", class: "btn btn-primary" do %>
            <%= icon "save" %> Сохранить
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% end %>

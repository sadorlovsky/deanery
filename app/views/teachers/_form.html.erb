<%= simple_form_for(@teacher, html: {class: "form-horizontal"}, defaults: {input_html: {class: "form-control"}}) do |f| %>
  
  <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
      <% @teacher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :last_name, "Фамилия", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.input_field :last_name, required: true, placeholder: "Фамилия" %>
          <span class="help-block with-errors">Обязательное поле</span>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :first_name, "Имя", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.input_field :first_name, required: true, placeholder: "Имя" %>
          <span class="help-block with-errors">Обязательное поле</span>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :middle_name, "Отчество", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.input_field :middle_name, required: true, placeholder: "Отчество" %>
          <span class="help-block with-errors">Обязательное поле</span>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :birth_date, "Дата рождения", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.input_field :birth_date, as: :string, data: {uk_datepicker: "{weekstart: 0, i18n: { months:#{ru_months}, weekdays:#{ru_weekdays} }, pos:'top', format:'DD.MM.YYYY', minDate:'#{(Date.today - 35.years).strftime("%d.%m.%Y")}', maxDate:'#{(Date.today - 15.years).strftime("%d.%m.%Y")}'}"}, required: true, placeholder: "ДД.ММ.ГГГГ" %>
          <span class="help-block with-errors">Обязательное поле</span>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :photo, "Фото", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.input_field :photo, as: :file, data: {"show-upload": false, "show-caption": false, "initial-preview": "#{image_tag @teacher.photo.url(:medium)}", "language": "ru", "preview-file-type": "image"}, accept: "image/*" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :cathedra, "Кафедра", required: false, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.input_field :cathedra, placeholder: "Кафедра"%>
        </div>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-12">
      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
          <%= link_to :back, class: "btn btn-default" do %>
            <%= icon "chevron-left" %></i> Назад
          <% end %>
        </div>
        <div class="btn-group" role="group">
          <%= button_tag type: "submit", class: "btn btn-primary" do %>
            <%= icon "save" %> Сохранить
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
<% end %>

<%= simple_form_for([@group, @student], html: {class: "form-horizontal", multipart: true}, defaults: {input_html: {class: "form-control"}}) do |f| %>

  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

<div class="row">
  <div class="col-md-6">

    <div class="panel panel-default">

      <div class="panel-heading clearfix">
        <h3 class="panel-title">Фио</h3>
      </div>

      <div class="panel-body">

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :last_name, "Фамилия", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :last_name, required: true, placeholder: "Фамилия" %>
                <span class="help-block with-errors">Обязательное поле</span>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :first_name, "Имя", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :first_name, required: true, placeholder: "Имя" %>
                <span class="help-block with-errors">Обязательное поле</span>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :middle_name, "Отчество", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :middle_name, required: true, placeholder: "Отчество" %>
                <span class="help-block with-errors">Обязательное поле</span>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

    <div class="panel panel-default">
    
      <div class="panel-heading clearfix">
        <h3 class="panel-title">Паспорт</h3>
      </div>

      <div class="panel-body">

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :passport_ser, "Серия", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :passport_ser, required: true, placeholder: "Серия" %>
                <span class="help-block with-errors">Обязательное поле</span>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :passport_num, "Номер", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :passport_num, required: true, placeholder: "Номер" %>
                <span class="help-block with-errors">Обязательное поле</span>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :passport_issue_where, "Кем выдан", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :passport_issue_where, required: true, placeholder: "Кем выдан" %>
                <span class="help-block with-errors">Обязательное поле</span>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :passport_issue_when, "Когда выдан", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :passport_issue_when, as: :string,required: true, data: {provide: "datepicker", "date-format": "dd.mm.yyyy"}, placeholder: "Когда выдан" %>
                <span class="help-block with-errors">Обязательное поле</span>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>



  <div class="col-md-6">

    <div class="panel panel-default">
  
      <div class="panel-heading clearfix">
        <h3 class="panel-title">Контакты</h3>
      </div>

      <div class="panel-body">

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :address, "Адрес", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :address, placeholder: "Адрес" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :phone, "Телефон", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :phone, placeholder: "Телефон" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :email, "E-mail", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :email, placeholder: "E-mail" %>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

    <div class="panel panel-default">
    
      <div class="panel-heading clearfix">
        <h3 class="panel-title">Допольнительно</h3>
      </div>

      <div class="panel-body">

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :birth_date, "Дата рождения", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :birth_date, as: :string, data: {uk_datepicker: "{weekstart: 0, i18n: { months:#{ru_months}, weekdays:#{ru_weekdays} }, pos:'top', format:'DD.MM.YYYY', minDate:'#{(Date.today - 35.years).strftime("%d.%m.%Y")}', maxDate:'#{(Date.today - 15.years).strftime("%d.%m.%Y")}'}"}, required: true, placeholder: "ДД.ММ.ГГГГ" %>
                <span class="help-block with-errors">Обязательное поле</span>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :code, "Номер студенческого билета", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :code, required: true, placeholder: "Номер студенческого билета" %>
                <span class="help-block with-errors">Обязательное поле</span>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :gender, "Пол", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :gender, collection: genders, prompt: "Пол" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :photo, "Фото", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :photo, as: :file, data: {"show-upload": false, "show-caption": false, "initial-preview": "#{image_tag @student.photo.url(:medium)}", "language": "ru", "preview-file-type": "image"}, accept: "image/*" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :class_monitor, "Староста группы", required: false, class: "col-sm-4 control-label" %>
              <div class="col-sm-8">
                <%= f.input_field :class_monitor %>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>

</div>


  <div class="form-group">
    <div class="col-md-12">
      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
          <%= link_to :back, class: "btn btn-default" do %>
            <%= icon "chevron-left" %></i> Назад
          <% end %>
        </div>
        <div class="btn-group" role="group">
          <%= button_tag type: "submit", class: "btn btn-primary" do %>
            <%= icon "save" %> Сохранить
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% end %>

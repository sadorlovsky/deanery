<h2>Войти в систему</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}, defaults: {input_html: {class: "form-control"}}) do |f| %>

  <div class="form-group">
    <%= f.label :email, "Электронная почта" %>
    <%= f.input_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Пароль" %><br />
    <%= f.input_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.label :remember_me, "Запомнить" %>
      <%= f.input_field :remember_me, as: :boolean, checked: true %>
    </div>
  <% end %>

  <div class="form-group">
    <%= button_tag type: "submit", class: "btn btn-primary" do %>
      Войти
    <% end %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

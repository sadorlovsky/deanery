<%= simple_form_for(@discipline, html: {class: "form-horizontal"}, defaults: {input_html: {class: "form-control"}}) do |f| %>

  <% if @discipline.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@discipline.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
      <% @discipline.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <%= f.label :title, "Наименование", required: false, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.input_field :title, required: true, placeholder: "Название предмета" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, "Описание", required: false, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.input_field :description, placeholder: "Описание предмета" %>
        </div>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-8">
      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
          <%= link_to :back, class: "btn btn-default" do %>
            <%= icon "chevron-left" %></i> Назад
          <% end %>
        </div>
        <div class="btn-group" role="group">
          <%= button_tag type: "submit", class: "btn btn-primary" do %>
            <%= icon "save" %> Сохранить
          <% end %>
        </div>
      </div>
    </div>
  </div>



<% end %>
